{
    "rules" : {
        "main": "<root>{root}</root>",
        "root": {        	
            "main": "<name>{$name}</name><address>{address}</address>",
            "address": {
            	"condition": "eq({$city},'Bangalore')",
            	"main": "<city>{$city}</city><zip>{$zip}</zip>"
            }
        }
    }
}